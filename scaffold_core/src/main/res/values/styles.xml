<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="scaffold_ProgressBarWithText">
        <attr name="scaffold_textColor" format="color" />
        <attr name="scaffold_textSize" format="dimension" />
        <attr name="scaffold_text" format="string" />
    </declare-styleable>

    <declare-styleable name="scaffold_SmoothSwitch">
        <attr name="scaffold_size" format="enum">
            <enum name="small" value="0" />
            <enum name="large" value="1" />
        </attr>
        <attr name="scaffold_trackColor" format="color" />
        <attr name="scaffold_thumbColor" format="color" />
        <attr name="scaffold_borderColor" format="color" />
        <attr name="scaffold_borderWidth" format="dimension" />
        <attr name="scaffold_leftTrackText" format="string" />
        <attr name="scaffold_rightTrackText" format="string" />
        <attr name="scaffold_trackTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="scaffold_ExpandTextView">
        <attr name="scaffold_expandTextColor" format="color" />
    </declare-styleable>

    <style name="scaffold_LargeText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="scaffold_SmallText">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="scaffold_actionActivity" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
    </style>

</resources>
